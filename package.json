{
    "name": "vite-plugin-unit",
    "version": "0.0.5",
    "description": "A vite plugin to enable you build websites in units.",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "./dist/",
        "./LICENSE.md",
        "./README.md",
        "./package.json"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/henryhale/vite-plugin-unit.git"
    },
    "keywords": [
        "vite",
        "static",
        "site",
        "static site generator",
        "ui",
        "website",
        "browser"
    ],
    "author": {
        "name": "Henry Hale",
        "url": "https://github.com/henryhale"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/henryhale/vite-plugin-unit/issues"
    },
    "homepage": "https://github.com/henryhale/vite-plugin-unit#readme",
    "type": "module",
    "scripts": {
        "build": "tsc -b",
        "dev": "tsc -w",
        "lint": "eslint --cache --ext .ts source/ && prettier -c source/",
        "lint:fix": "eslint --cache --ext .ts source/ --fix && prettier -c -w source/",
        "prepack": "pnpm build",
        "prepare": "husky install",
        "release": "release-it",
        "test": "echo \"Error: no test specified\""
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=8"
    },
    "lint-staged": {
        "*.ts": "pnpm lint:fix"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "none"
    },
    "devDependencies": {
        "@release-it/conventional-changelog": "^8.0.1",
        "@types/node": "^20.12.2",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "release-it": "^17.1.1",
        "typescript": "^5.4.3",
        "vite": "^5.2.7"
    }
}
